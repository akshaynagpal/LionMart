# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /loginSuccess               controllers.Application.loginSuccess()
GET     /loginFail                  controllers.Application.loginFail()
POST    /contact                    controllers.Application.contactSeller()
POST    /addPerson                  controllers.Application.addPerson()
POST    /postItem                   controllers.Application.postItem()
POST    /person                     controllers.Application.addPerson()
POST    /processItemForm            controllers.Application.processItemForm()
GET     /user                       controllers.Application.showUser()
GET     /viewItem                   controllers.Application.viewItem()
GET     /editItem                   controllers.Application.editItem()
GET     /markSold                   controllers.Application.markSold()
POST    /processSoldItem            controllers.Application.processSoldItem()
#POST    /loginSubmit               controllers.Application.loginSubmit()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
